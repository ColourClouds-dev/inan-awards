rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Admin has full access
    function isAdmin() {
      return request.auth != null && request.auth.email == 'adminaccess@inan.com.ng';
    }

    // Allow settings to be read by admin only
    match /settings/{document} {
      allow read, write: if isAdmin();
    }

    // Allow nominations to be created by anyone, but only read by admin
    match /nominations/{userId} {
      allow read: if isAdmin();
      allow create: if true;  // Anyone can create a nomination
      allow update, delete: if isAdmin();
    }

    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
